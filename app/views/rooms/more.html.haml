%h1 Public rooms list

.row
  .col-6
    - if @rooms.present?
      %ul.list-group
        - @rooms.each do |room|
          %li.list-group-item.d-flex.justify-content-between.align-items-center
            = room.name
            -# %button.btn.btn-sm.btn-outline-primary{ type: 'button' } Join
            = button_to 'Join', join_room_path(room), remote: true, method: :put, class: ' btn btn-sm btn-outline-primary'

    - else
      .alert.alert-info You are already a member in all public rooms.

:javascript
  document.addEventListener('DOMContentLoaded', function() {
    window.initializeRoomsJoin()
  });
